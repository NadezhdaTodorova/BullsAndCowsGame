@model HightScoresStatisticsVM
<link href="~/css/HightScoreStatistics.css" rel="stylesheet" />
<div class="resultTable">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>User</th>
                <th>Score</th>
                <th>Tries</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.listScoresStatistics)
            {
                <tr>
                    <td>
                        @user.Username
                    </td>
                    <td>
                        @user.Score
                    </td>
                    <td>
                        @user.NumTries
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>